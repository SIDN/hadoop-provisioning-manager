# use timer to start Prometheus Impala Proxy Kill unit
# this to make sure the proxy always has a valid keytab

[Unit]
Description=Prometheus Impala Proxy Kill Timer
Requires=prometheus_impala_proxy_kill.service

[Timer]
Unit=prometheus_impala_proxy_kill.service
# run every night at midnight
OnCalendar=*-*-* 00:00:00

[Install]
WantedBy=timers.target