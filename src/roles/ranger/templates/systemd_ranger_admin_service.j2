[Unit]
Description=Ranger
After=network.target
StartLimitIntervalSec=0

[Service]
Type=forking
User=ranger
Group=ranger
ExecStart={{ stack_root }}/apache-ranger-admin-latest/ews/ranger-admin-services.sh start
ExecStop={{ stack_root }}/apache-ranger-admin-latest/ews/ranger-admin-services.sh stop
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target