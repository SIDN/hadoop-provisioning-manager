#!/usr/bin/env bash

# Created on {{ ansible_date_time.iso8601 }}
# Pushed to: {{  inventory_hostname }}

DOCKER_IMG_FOUND=$(docker ps | grep superset | wc -l)

if [ DOCKER_IMG_FOUND != 0 ]
then
  echo "Renew Kerberos ticket for superset"
  kinit -kt /etc/superset.keytab superset@{{ kerberos_realm }}
fi