[Unit]
Description=airflow
After=docker.service
Requires=docker.service
 
[Service]
TimeoutStartSec=0
Restart=always
RestartSec=60
User={{ airflow_os_user }}
Group={{ airflow_os_group }}
Type=exec
ExecStart={{ stack_root }}/airflow-latest/bin/start-airflow.sh
ExecStop={{ stack_root }}/airflow-latest/bin/stop-airflow.sh
[Install]
WantedBy=multi-user.target


